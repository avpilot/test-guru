<h2><%= question_header(action_name, @test.title) %></h2>

<form action="/tests/<%= @test.id %>/questions" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <input name="question[test_id]" value="<%= @test.id %>" type="hidden">
  <p>
    <label for=question-body>Body:</label>
    <input type="text" name="question[body]" id="question-body">
  </p><br>

  <input type="submit" value="Create">
</form>

<p><%= link_to 'Back', tests_path %></p>
